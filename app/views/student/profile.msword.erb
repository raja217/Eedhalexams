<div id="page-yield" class="available_sections">
  <div class="hor_line"></div>
  <div id="student_profile_heading" class="section">
    <div id ="student_main_info" align="center">
      <h2> <%= @student.full_name %>  </h2>
      <h4><%= t('student_profile') %></h4>
    </div>
  </div>
  <div id="profile_picture_display">
      <% if @student.photo.file? %>
        <%= image_tag @student.photo.url%>
      <% else %>
        <%= image_tag "master_student/profile/default_student.png" %>
      <% end %>
    </div>


  <table id="pdf-table" align="center" width="100%" cellspacing="0" class="section">
    <tr class="odd"><td class="col-pdf"><%= "Registration number" %></td><td class="col-pdf"><%= @student.admission_no unless @student.admission_no.nil? %></td></tr><br/>
    <tr class="odd"><td class="col-pdf"><%= t('batch') %></td><td class="col-pdf"><%= @student.batch.name unless @student.batch.name.nil? %></td></tr><br/>
    <tr class="even"><td class="col-pdf"><%= t('course_text') %></td><td class="col-pdf"><%= @student.batch.course.full_name unless @student.batch.course.full_name.nil? %></td></tr><br/>
    <tr class="odd"><td><%= t('date_of_birth') %></td><td class="right"><%= I18n.l(@student.date_of_birth,:format=>:normal) unless @student.date_of_birth.nil? %></td></tr><br/>
    <tr class="odd"><td><%= t('gender') %></td><td class="right"><%= t("#{@student.gender_as_text.downcase}") %></td></tr>
<br/>
    

    <tr class="even"><td><%= t('address') %></td><td class="right"><%= @student.address_line1%><%= ', ' unless @student.address_line1.blank? %><%=  @student.address_line2 %></td></tr><br/>
    <tr class="odd"><td><%= t('city') %></td><td class="right"><%= @student.city %></td></tr><br/>
    <tr class="even"><td><%= t('state') %></td><td class="right"><%= @student.state %></td></tr><br/>
    <tr class="odd"><td><%= "Mobile" %></td><td class="right"><%= @student.phone1 %></td></tr><br/>
    <tr class="even"><td><%= "Phone(Land line)" %></td><td class="right"><%= @student.phone2 %></td></tr><br/>
    <tr class="odd"><td><%= t('email') %></td><td class="right"><%= @student.email %></td></tr><br/>
    <tr class="even"><td><%= "10th percentage" %></td><td class="right"><%= @student.percent10 %></td></tr><br/>
    <tr class="odd"><td><%= "10th Year of passing" %></td><td class="right"><%= @student.year %></td></tr><br/>
    <tr class="even"><td><%= "12th percentage" %></td><td class="right"><%= @student.percent12 %></td></tr><br/>
    <tr class="odd"><td><%= "12th Year of passing" %></td><td class="right"><%= @student.year12 %></td></tr><br/>
    <tr class="even"><td><%= "Degree overall percentage" %></td><td class="right"><%= @student.overall %></td></tr><br/>
    <tr class="odd"><td><%= "Degree Year of passing" %></td><td class="right"><%= @student.yeard %></td></tr><br/>
  </table>
</div>